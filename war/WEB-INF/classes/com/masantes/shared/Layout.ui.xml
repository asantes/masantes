<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			xmlns:g="urn:import:com.google.gwt.user.client.ui"
			xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	
	<ui:style src="">
	
		.menu{
			margin-top: 1em
		}
		
		.mainContent{
			padding-top: 1em;
		 	height: 100%;
  			min-height: 100%;
		}
		
		.mainContainer{
	 		 min-height: 100%;
	 		 height: 100%;
	  		 margin: 0 auto -40px;
		}
		
	</ui:style>
	
	<b:Container fluid="true" addStyleNames="{style.mainContainer}">
		<b:Navbar position="STATIC_TOP" type="INVERSE" ui:field="menu" addStyleNames="{style.menu}"></b:Navbar>
		<b:Row ui:field="mainContent" addStyleNames="{style.mainContent}"></b:Row>
	</b:Container>
	
</ui:UiBinder> 